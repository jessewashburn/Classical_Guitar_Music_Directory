@model CGMD.Models.Piece

@{
    ViewData["Title"] = "Suggest Repertoire";
}

<h1>Suggest Repertoire</h1>

<h6>Please enter repertoire information. Our team will review the work and enter it into the database if applicable.</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostConf">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Composer" class="control-label">Composer</label>
                <input asp-for="Composer" class="form-control" />
                <span asp-validation-for="Composer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YOB" class="control-label">Year of Birth</label>
                <input asp-for="YOB" class="form-control" />
                <span asp-validation-for="YOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YOD" class="control-label">Year of Death</label>
                <input asp-for="YOD" class="form-control" />
                <span asp-validation-for="YOD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nation" class="control-label">Nationality</label>
                <input asp-for="Nation" class="form-control" />
                <span asp-validation-for="Nation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Work" class="control-label">Title</label>
                <input asp-for="Work" class="form-control" />
                <span asp-validation-for="Work" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label">Tags</label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inst" class="control-label">Instrumentation</label>
                <input asp-for="Inst" class="form-control" />
                <span asp-validation-for="Inst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="keyOf" class="control-label">Key(s)</label>
                <input asp-for="keyOf" class="form-control" />
                <span asp-validation-for="keyOf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video" class="control-label">Video URL</label>
                <input asp-for="Video" class="form-control" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label">Score URL</label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label">Email</label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
