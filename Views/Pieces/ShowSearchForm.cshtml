@model CGMD.Models.Piece

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<h6>Filter works by composer, title, or tags</h6>
<hr />
<div class="row">

   <div class="col-md-12">
        <form asp-action="ShowSearchResults">
           
            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
                
            </div>
           <br />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
            <br>
        </form>
   </div>
   
</div>
<div>
    <a asp-action="ShowAdvSearch">Advanced Search</a>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



