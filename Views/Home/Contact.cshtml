@model CGMD.Models.Piece

@{
    // Setting the title of the page
    ViewData["Title"] = "Contact";
}

<!-- Main heading for the Contact page -->
<h1>Contact Me</h1>

<div class="row">
    <div class="col-md-6">
        <!-- Form for contacting, posts data to the Mail action in the Mail controller -->
        <form asp-controller="Mail" asp-action="Mail">
            <!-- Validation summary to display model validation errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Form group for Name input -->
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>

            <!-- Form group for Email input -->
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <!-- Form group for Subject Line input -->
            <div class="form-group">
                <label for="heading">Subject Line:</label>
                <input type="text" id="subjectLine" name="subjectLine" class="form-control" required>
            </div>

            <!-- Form group for Message textarea -->
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="message" class="form-control" required></textarea>
            </div>

            <!-- Submit button for the form -->
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<!-- Link to go back to the list (assumed to be a list of pieces or main page) -->
<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Section for including validation scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
